  "scripts": {
    "prepare": "husky install && npm run setup:hooks",
    "postinstall": "npm run setup:env && npm run build:deps",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "start:prod": "cross-env NODE_ENV=production pm2 start ecosystem.config.js",
    "start:cluster": "pm2 start ecosystem.config.js --env production",
    "start:docker": "docker-compose up -d --build",
    "dev": "vite --host 0.0.0.0 --port 3000 --open",
    "dev:https": "vite --https --host 0.0.0.0 --port 3443",
    "dev:debug": "cross-env NODE_OPTIONS='--inspect' tsx src/index.ts",
    "watch": "tsx watch src/index.ts",
    "serve": "vite preview --port 3000",
    "build": "npm run build:clean && npm run build:types && npm run build:compile",
    "build:clean": "rimraf dist coverage .nyc_output reports artifacts",
    "build:types": "tsc --noEmit",
    "build:compile": "tsc -p tsconfig.build.json && vite build",
    "build:analyze": "cross-env ANALYZE=true vite build",
    "build:docker": "docker build -t socialhub-pro:v11.0 .",
    "build:deps": "node scripts/build-deps.js",
    "preview": "vite preview --port 3000",
    "deploy": "npm run build && node scripts/deploy.js",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest run --coverage --reporter=html",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui --open",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --cache --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix --cache",
    "format": "prettier --write . --cache",
    "format:check": "prettier --check . --cache",
    "typecheck": "tsc --noEmit --incremental",
    "validate": "npm run typecheck && npm run lint && npm run test:unit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "snyk test --all-projects --severity-threshold=medium",
    "security:fix": "snyk fix",
    "security:secrets": "secretlint '**/*' --format table",
    "monitor": "pm2 monit",
    "health": "node scripts/health-check.js",
    "update": "npm update && npm audit fix",
    "clean": "rimraf node_modules dist coverage .nyc_output reports artifacts tmp",
    "reset": "npm run clean && npm install",
    "setup": "npm run setup:env && npm run setup:hooks && npm run build:deps",
    "setup:env": "node scripts/setup-environment.js",
    "setup:hooks": "husky add .husky/pre-commit 'lint-staged' && husky add .husky/commit-msg 'commitlint --edit'",
    "perf:profile": "0x -- node dist/index.js",
    "perf:clinic": "clinic doctor -- node dist/index.js",
    "perf:load": "autocannon -c 100 -d 30 http://localhost:3000",
    "docker:build": "docker build --target production -t socialhub-pro:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env socialhub-pro:latest",
    "docker:compose": "docker-compose up -d --build",
    "docker:health": "docker inspect --format='{{json .State.Health}}' socialhub-pro",
    "docs:build": "typedoc --out docs/api src/",
    "docs:api": "swagger-jsdoc -d swaggerDef.js src/**/*.ts -o docs/swagger.json",
    "docs:serve": "npx http-server docs/api -p 8080",
    "pwa:build": "workbox generateSW workbox-config.js",
    "pwa:manifest": "pwa-asset-generator public/icon.svg public/icons --manifest public/manifest.json",
    "i18n:extract": "formatjs extract 'src/**/*.ts' --out-file locales/messages.json",
    "i18n:compile": "formatjs compile-folder --ast locales translations",
    "size:analyze": "npm run build && webpack-bundle-analyzer dist/stats.json",
    "size:check": "bundlesize",
    "size:limit": "size-limit",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version:patch": "npm version patch && git push --follow-tags",
    "version:minor": "npm version minor && git push --follow-tags", 
    "version:major": "npm version major && git push --follow-tags"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix", 
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "chore",
          "ci",
          "build",
          "revert"
        ]
      ],
      "scope-enum": [
        2,
        "always", 
        [
          "api",
          "auth",
          "core",
          "platforms",
          "ui",
          "build",
          "ci",
          "deps",
          "security",
          "performance",
          "docs",
          "tests"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --cache",
      "prettier --write --cache"
    ],
    "*.{css,scss,less}": [
      "prettier --write --cache"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write --cache"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run validate",
      "post-merge": "npm install",
      "post-checkout": "npm install",
      "post-rewrite": "npm install"
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es2024": true
    },
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "@typescript-eslint/recommended-requiring-type-checking",
      "plugin:security/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:promise/recommended",
      "plugin:sonarjs/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "security",
      "import",
      "promise",
      "sonarjs",
      "no-secrets"
    ],
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "prefer-const": "error",
      "no-var": "error",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/prefer-nullish-coalescing": "error",
      "@typescript-eslint/prefer-optional-chain": "error",
      "security/detect-object-injection": "error",
      "security/detect-non-literal-regexp": "error",
      "import/order": "error",
      "import/no-unresolved": "error",
      "import/no-duplicates": "error",
      "promise/always-return": "error",
      "promise/no-return-wrap": "error",
      "promise/catch-or-return": "error",
      "sonarjs/cognitive-complexity": ["error", 15],
      "sonarjs/no-duplicate-string": "error",
      "no-secrets/no-secrets": "error"
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "coverage",
      "reports",
      "artifacts",
      "*.config.js"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "proseWrap": "preserve",
    "requirePragma": false,
    "vueIndentScriptAndStyle": false
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "300 kB",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "30 kB", 
      "compression": "gzip"
    }
  ],
  "size-limit": [
    {
      "name": "Main Bundle",
      "path": "dist/index.js",
      "limit": "300 KB"
    },
    {
      "name": "API Bundle", 
      "path": "dist/api/index.js",
      "limit": "150 KB"
    },
    {
      "name": "Platforms Bundle",
      "path": "dist/platforms/index.js", 
      "limit": "200 KB"
    }
  ],
  "vitest": {
    "environment": "node",
    "testTimeout": 30000,
    "globals": true,
    "coverage": {
      "provider": "v8",
      "reporter": ["text", "json", "html", "lcov"],
      "exclude": [
        "node_modules/",
        "dist/",
        "coverage/",
        "**/*.d.ts",
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "**/test/**",
        "**/tests/**",
        "**/__tests__/**"
      ],
      "thresholds": {
        "global": {
          "branches": 85,
          "functions": 85,
          "lines": 85,
          "statements": 85
        }
      }
    }
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,js,json",
    "ignore": [
      "src/**/*.test.ts",
      "src/**/*.spec.ts",
      "dist/",
      "node_modules/"
    ],
    "exec": "tsx src/index.ts",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "develop",
        "prerelease": "beta"
      },
      {
        "name": "next",
        "prerelease": "alpha"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\\n\\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "snyk": {
    "language-settings": {
      "javascript": {
        "includeDevDependencies": false
      }
    }
  },
  "engineStrict": true,
  "stability": "stable",
  "beta": false,
  "experimental": false
}